{
  "name": "lite-ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:js": "node scripts/build.js",
    "watch:js": "node scripts/build.js",
    "build:css": "postcss src/css/index.css -o dist/liteui.min.css",
    "watch:css": "postcss src/css/index.css -o dist/liteui.min.css --watch",
    "build": "npm run build:js && npm run build:css",
    "dev": "node scripts/build.js & postcss src/css/index.css -o dist/liteui.min.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.20.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18"
  }
}
