{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2018"],
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "handlers/*": ["js/handlers/*"],
      "components/*": ["js/handlers/components/*"],
      "*": ["js/*"]
    }
  },
  "include": ["src"]
}